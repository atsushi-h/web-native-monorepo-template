{
  "mcpServers": {
    "playwright": {
      "command": "pnpm",
      "args": ["dlx", "@playwright/mcp@latest", "--config", "./playwright-mcp-config.json"],
      "env": {
        "PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD": "1"
      }
    },
    "context7": {
      "type": "stdio",
      "command": "pnpm",
      "args": ["dlx", "@upstash/context7-mcp@latest"],
      "env": {}
    }
  }
}
